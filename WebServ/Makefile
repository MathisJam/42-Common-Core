# Program name
NAME		=	webserv

# Compilation flags
CXX			=	c++
CXXFLAGS	=	-Wall -Wextra -Werror -std=c++98 -MMD -g3

# Includes
INC			=	-I ./inc/

# Sources
SRC_PATH	=	src/
SRC			=	main.cpp		HandlerRequest.cpp		Request.cpp\
				Response.cpp	utils.cpp 				parser.cpp\
				resolver.cpp	Socket.cpp				Server.cpp

# Objects
OBJ_PATH	=	obj/
OBJ			=	$(SRC:.cpp=.o)
OBJS		=	$(addprefix $(OBJ_PATH), $(OBJ))

# Dependances
DEP			=	$(OBJS:.o=.d)

# Color codes for terminal output
RESET		=	\e[0;39m
GRAY		=	\e[0;90m
RED			=	\e[0;91m
GREEN		=	\e[0;92m
YELLOW		=	\e[0;93m
BLUE		=	\e[0;94m
MAGENTA		=	\e[0;95m
CYAN		=	\e[0;96m
WHITE		=	\e[0;97m

BOLD_YEL	=	\e[1;93m

# Shortcuts
UNCHECK_MARK=	$(EL) [ ]\040\040
CHECK_MARK	=	$(EL) [$(GREEN)✔️$(RESET)]\040\040
COLOR_NAME	=	$(BOLD_YEL)$(NAME)$(RESET)

RUN			=	./$(NAME)
VALGRIND	=	valgrind ./$(NAME)

SILENT		=	> /dev/null 2>&1
EL			=	\e[K


# ------------------------------------------------------------------------------------------------------------------------------- #


# Default target calling for the executable
all: $(NAME)

# Builds the mandatory part and launches the program
run: $(NAME)
	@printf "\n$(BOLD_YEL)Launching ./$(NAME) - - - - - - - - - - - - #$(RESET)\n\n"
	@$(RUN)

# Cleans, builds the mandatory part and launches the program with valgrind
valgrind: $(NAME)
	@printf "\n$(BOLD_YEL)Launching valgrind ./$(NAME) - - - - - - - - - - - - - - - - - - - - - - - - - #$(RESET)\n\n"
	@$(VALGRIND)

# Target to build the mandatory part
$(NAME): $(OBJS) Makefile
	@$(CXX) $(CXXFLAGS) $(INC) -o $(NAME) $(OBJS)
	@printf "$(CHECK_MARK)$(COLOR_NAME) completed\n"

# Compiles C source files into object files
$(OBJ_PATH)%.o: $(SRC_PATH)%.cpp
	@mkdir -p $(dir $@)
	@$(CXX) $(CXXFLAGS) $(INC) -c $< -o $@

# Include auto-generated dependencies
-include $(DEP)

# Cleans object files and dependencies
clean:
	@rm -rf $(OBJ_PATH) $(SILENT)
	@printf "$(CHECK_MARK).o object files removed\n"

# Cleans everything generated by the Makefile
fclean:	clean
	@rm -f $(NAME)
	@printf "$(CHECK_MARK)all created files have been removed\n"

# Cleans everything generated by the Makefile and rebuilds all
re: fclean all

# Phony targets
.PHONY: all clean fclean re
